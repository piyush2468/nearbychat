<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spaceLR"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/space10"
    android:paddingRight="@dimen/space10"
    android:paddingLeft="@dimen/space10"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.rndtechnosoft.fynder.utility.RegularTextView
            android:id="@+id/right_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/space5"
            android:text="5:04"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorTextInfo"
            android:textSize="@dimen/h5" />

        <ImageView
            android:id="@+id/image_tick_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="3dp"
            android:src="@drawable/tick_single"
            android:tint="@color/color_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_right"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/right_reply_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp">

            </LinearLayout>

            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:padding="@dimen/space10"
                android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/black"
                android:textSize="@dimen/h3" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>