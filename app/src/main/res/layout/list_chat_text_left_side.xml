<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/left_profile_pic"
            android:layout_width="@dimen/chat_profile_pic_size"
            android:layout_height="@dimen/chat_profile_pic_size"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/bg_chat"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_bubble_chat">

                            <com.rndtechnosoft.fynder.utility.RegularTextView
                                android:id="@+id/left_display_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:maxLines="1"
                                android:textStyle="bold" />

                            <com.vanniktech.emoji.EmojiTextView
                                android:id="@+id/left_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoLink="web"
                                android:text="dsadsad dsa dsad"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/color_black_new"
                                app:emojiSize="@dimen/emoji_size" />
                        </LinearLayout>

                </LinearLayout>

                <com.rndtechnosoft.fynder.utility.RegularTextView
                    android:id="@+id/left_text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="-30dp"
                    android:layout_toRightOf="@id/layout_left"
                    android:gravity="bottom"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>


</RelativeLayout>