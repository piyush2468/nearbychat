<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_ptt_popup"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <ImageView
            android:id="@+id/image_ptt_1"
            android:src="@drawable/ptt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/image_ptt_2"
            android:visibility="gone"
            android:src="@drawable/ptt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/image_ptt_3"
            android:visibility="gone"
            android:src="@drawable/ptt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/image_ptt_4"
            android:visibility="gone"
            android:src="@drawable/ptt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</FrameLayout>